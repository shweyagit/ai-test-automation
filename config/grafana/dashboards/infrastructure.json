{
  "annotations": { "list": [] },
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "title": "Host CPU Usage %",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus-k6" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 20, "lineWidth": 2 },
          "unit": "percent", "min": 0, "max": 100
        }
      },
      "targets": [
        {
          "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Host Memory Usage %",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus-k6" },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "orange", "mode": "fixed" },
          "custom": { "fillOpacity": 20, "lineWidth": 2 },
          "unit": "percent", "min": 0, "max": 100
        }
      },
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "Memory Usage",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Container CPU Usage %",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus-k6" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 10, "lineWidth": 2 },
          "unit": "percent"
        }
      },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{id=~\"/docker/.+\"}[1m]) * 100",
          "legendFormat": "{{id}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Container Memory Usage (MB)",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus-k6" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 10, "lineWidth": 2 },
          "unit": "decmbytes"
        }
      },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{id=~\"/docker/.+\"} / 1024 / 1024",
          "legendFormat": "{{id}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Container Network I/O (bytes/s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 18 },
      "datasource": { "type": "prometheus", "uid": "prometheus-k6" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 10, "lineWidth": 2 },
          "unit": "Bps"
        }
      },
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{id=~\"/docker/.+\"}[1m])",
          "legendFormat": "{{id}} - rx",
          "refId": "A"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{id=~\"/docker/.+\"}[1m])",
          "legendFormat": "{{id}} - tx",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Disk I/O (bytes/s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 18 },
      "datasource": { "type": "prometheus", "uid": "prometheus-k6" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 10, "lineWidth": 2 },
          "unit": "Bps"
        }
      },
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[1m])",
          "legendFormat": "{{device}} - read",
          "refId": "A"
        },
        {
          "expr": "rate(node_disk_written_bytes_total[1m])",
          "legendFormat": "{{device}} - write",
          "refId": "B"
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "tags": ["infrastructure", "cpu", "memory"],
  "templating": { "list": [] },
  "time": { "from": "now-15m", "to": "now" },
  "title": "Prometheus",
  "uid": "infra-dashboard"
}
